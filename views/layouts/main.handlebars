<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fund My Project!</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://kit.fontawesome.com/43e0e0f4f2.js" crossorigin="anonymous"></script>
</head>

<body>
  <div class="parentContainer">
    <header>
      <h1>
        Panacea
      </h1>
      <nav class="headerNav">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">profile</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main>
      <!-- Render the sub layout -->
      {{{ body }}}
      <div class="cart">
        <i class="fa-solid fa-cart-arrow-down"></i>
      </div>
      <div class="cartBody"></div>
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  <script src="/js/script.js"></script>
</body>

</html>
